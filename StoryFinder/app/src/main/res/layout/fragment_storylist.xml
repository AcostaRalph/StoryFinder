<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_story_view"
    android:padding="16dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/card_image"
                android:layout_height="wrap_content"
                android:src="@drawable/triforce"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:padding="1dp"
                android:layout_width="170dp"/>

            <TextView
                android:id="@+id/card_story_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_image"
                android:layout_alignParentTop="true"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/card_story_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card_image"
                android:layout_below="@+id/card_story_title"
                android:textSize="12sp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
