<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_story_view"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/card_image"
                android:src="@drawable/mastersword"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"

                />

            <TextView
                android:id="@+id/card_story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/card_rating"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:background="#8000"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="24dp"
                android:alpha="0.8"
                />

            <TextView
                android:id="@+id/card_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/card_ratingBar"
                android:textSize="14sp"
                android:textColor="#ffff"
                android:background="#8000"
                android:paddingBottom="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:alpha="0.8"
                />

            <RatingBar
                android:id="@+id/card_ratingBar"
                style="?attr/ratingBarStyleSmall"
                android:theme="@style/RatingBar"
                android:numStars="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#8000"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:alpha="0.8"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
